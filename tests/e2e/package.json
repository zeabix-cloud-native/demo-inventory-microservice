{
  "name": "demo-inventory-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Demo Inventory Microservice",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run",
    "test:e2e:headed": "cypress run --headed",
    "test:e2e:docker": "CYPRESS_FRONTEND_BASE_URL=http://localhost:8080 CYPRESS_API_BASE_URL=http://localhost:5000 CYPRESS_API_URL=http://localhost:5000/api cypress run",
    "test:e2e:docker:headed": "CYPRESS_FRONTEND_BASE_URL=http://localhost:8080 CYPRESS_API_BASE_URL=http://localhost:5000 CYPRESS_API_URL=http://localhost:5000/api cypress run --headed",
    "cypress:open:docker": "CYPRESS_FRONTEND_BASE_URL=http://localhost:8080 CYPRESS_API_BASE_URL=http://localhost:5000 CYPRESS_API_URL=http://localhost:5000/api cypress open",
    "postinstall": "echo 'Cypress E2E tests configured for frontend testing. Run npm run cypress:open to start testing.'"
  },
  "devDependencies": {
    "cypress": "^13.6.2"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "frontend",
    "ui"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cypress-ctrf-json-reporter": "^0.0.12"
  }
}
